TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# true = фоновий режим (для планувальника)
# false = видно браузер (для дебагу в PyCharm)
HEADLESS=true
-e
# Максимум одночасних вкладок браузера (для великої кількості манг)
MAX_CONCURRENT_PAGES=10

# Для обмежженя одночасник API
MAX_CONCURRENT_API=10

#8 манг → 1 батч → 1 браузер, закривається після
#25 манг → 3 батчі (10 + 10 + 5) → 3 браузери послідовно
#100 манг → 10 батчів по 10 → 10 браузерів послідовно, RAM завжди під контролем
BROWSER_BATCH_SIZE=10

# Скидати контекст браузера кожні N манг (очищає кеш і пам'ять)
CONTEXT_RESET_EVERY=20

# Максимальний час очікування на одну мангу в секундах
PAGE_TIMEOUT=60

MONGODB_URI=mongodb+srv://user:password@cluster0.xxxxx.mongodb.net/
MONGODB_DB=Namebase
MONGODB_COLLECTION=NameCollection